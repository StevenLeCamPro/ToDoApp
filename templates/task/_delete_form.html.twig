<!-- Boucle Twig -->
{% for task in tasks %}
<div class="mb-4">
    <!-- Bouton d'ouverture du modal -->


    <!-- Modal -->
    <div id="confirmModal-{{ task.id }}" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden">
        <div class="hidden fixed inset-0 bg-opacity-75 flex items-center justify-center z-50 backdrop-blur-sm">
        <div class="relative bg-white/30 backdrop-blur-lg shadow-2xl p-6 rounded-2xl border border-gray-300 w-96 transition-transform hover:scale-105">
            <h2 class="text-2xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-red-500 to-red-800">Confirmation</h2>
            <p class="mt-4 text-gray-800 font-medium leading-relaxed">
                Êtes-vous sûr de vouloir supprimer cette tâche ? Cette action est <span class="text-red-500 font-bold underline">irréversible</span>.
            </p>
            <div class="mt-6 flex justify-between items-center">
                <button type="button" class="px-5 py-2.5 bg-gradient-to-r from-gray-200 to-gray-400 text-gray-700 font-semibold rounded-xl shadow hover:from-gray-300 hover:to-gray-500 transition-all transform hover:scale-105">
                    Annuler
                </button>
                <button type="button" class="confirm px-5 py-2.5 bg-gradient-to-r from-red-500 to-red-700 text-white font-semibold rounded-xl shadow hover:from-red-600 hover:to-red-800 transition-all transform hover:scale-105">
                    Confirmer
                </button>
            </div>
        </div>
    </div>
</div>
{% endfor %}

<script>
function toggleModal(taskId) {
    const modal = document.getElementById(`confirmModal-${taskId}`);
    modal.classList.toggle('hidden');

    const cancelButton = modal.querySelector('.close-modal');
    cancelButton.addEventListener('click', () => {
        modal.classList.add('hidden');

    const confirmButton = modal.querySelector('.confirm');
    confirmButton.addEventListener('click', () => {
        modal.classList.add('hidden');
        console.log('Suppression de la tâche', taskId);
        window.location.href = `/`;
    });
    });
}
</script>
  
    




