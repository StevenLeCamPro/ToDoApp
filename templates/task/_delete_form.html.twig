<form method="post" action="{{ path('app_task_delete', {'id': task.id}) }}" 
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette tâche ? Cette action est irréversible.');" 
      class="inline-block">
      
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
    
    <button class="px-6 py-3 bg-gradient-to-r from-red-600 to-red-800 text-white font-bold rounded-xl shadow-lg transform transition 
                   hover:scale-105 hover:shadow-2xl active:scale-95">
        Supprimer
    </button>
</form>
